<div class="container">
  <h2><%= @cocktail.name %></h2>
  <% if @cocktail.photo.attached? %>
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  <% @cocktail.doses.each do |dose| %>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to "delete a dose", 
      dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <% end %>
  <br>
  <%= link_to "Back to cocktails list", cocktails_path %> |
  <br>
  <%= link_to "Add a new dose",  new_cocktail_dose_path(@cocktail)%>
</div>